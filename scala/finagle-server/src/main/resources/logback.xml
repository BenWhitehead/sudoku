<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="access-log" level="trace"/>
  <logger name="access-log-combined" level="OFF"/>

  <logger name="com.github.benwhitehead.tutorials.sudoku" level="warn"/>
  <logger name="status-line" level="warn"/>
  <logger name="status-grid" level="warn"/>

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
